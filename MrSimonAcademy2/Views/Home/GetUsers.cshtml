@model IEnumerable<MrSimonAcademy2.Models.User>

@{
    ViewBag.Title = "GetUsers";
    Layout = "~/Views/Shared/_Layout_login.cshtml";
}
    <div class="container-fluid">
        <h2>GetUsers</h2>

        <p>
            @Html.ActionLink("Добавить пользователя", "AddUser")
        </p>
        <table class="table">
            <tr>

                <th>
                    Фамилия
                </th>
                <th>
                    Имя
                </th>
                <th>
                    Email
                </th>
                <th>
                    Дата рождения
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.UserLName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserFName)
            </td>
            <td>
                @item.Email
            </td>
            @{
                DateTime FullBD = item.Birthday;
                string year = FullBD.Year.ToString("00");
                int month = FullBD.Month;
                int day = FullBD.Day;
            }
            <td>
                @day.@month.@year
            </td>

        </tr>
            }

        </table>

    </div>
