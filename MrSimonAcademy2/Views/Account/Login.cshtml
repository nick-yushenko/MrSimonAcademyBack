@using MrSimonAcademy2.Models
@model LoginModel
@{
    ViewBag.Title = "Log in";
    Layout = "~/Views/Shared/_Layout_login.cshtml";

}
<section class="section login">
    <div class="container ">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <p class="login-title">Если у Вас нет логина и пароля, обратитесь к своему преподавателю</p>
                <!-- Contact Form - Enter your email address on line 19 of the mail/contact_me.php file to make this form work. -->
                <!-- WARNING: Some web hosts do not allow emails to be sent through forms to common mail hosts like Gmail or Yahoo. It's recommended that you use a private domain email address! -->
                <!-- NOTE: To use the contact form, your site must be on a live web host with PHP! The form will not work locally! -->
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form", novalidate = true }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="row control-group">
                        <div class="form-group col-xs-12 floating-label-form-group controls">
                            @Html.LabelFor(m => m.Email, "Логин (E-mail)")
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "E-mail", required = true })
                            <p class="help-block text-danger"></p>
                        </div>
                    </div>
                    <div class="row control-group">
                        <div class="form-group col-xs-12 floating-label-form-group controls">
                            @Html.LabelFor(m => m.Password, "Параль")

                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Пароль", required = true })

                            <p class="help-block text-danger"></p>
                        </div>
                    </div>

                    <br>
                    <div id="success"></div>
                    <div class="row">
                        <div class="form-group col-xs-12">
                            <button type="submit" class="btn btn-default">Войти</button>
                        </div>

                        <div class="form-group col-xs-12">
                            <a href="forgot.html" class="login-forgot">Забыли пароль?</a>
                        </div>
                    </div>

                }
            </div>
        </div>
    </div>
</section>


